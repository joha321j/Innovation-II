        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studys.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="746.586" Width="1277.227" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" MouseDown="mainWindow_MouseDown">
    <Grid>
        <Grid HorizontalAlignment="Left" Width="963" Margin="314,0,0,0" Height="67" VerticalAlignment="Top" Background="White">
