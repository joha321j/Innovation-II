        </Grid>
        <Grid HorizontalAlignment="Left" Width="314" Background="#FF2A303A" Margin="0,67,0,275">
            <Button x:Name="BtnProjekter" HorizontalAlignment="Left" Margin="106,59,0,0" VerticalAlignment="Top" Width="99" Background="{x:Null}" BorderBrush="{x:Null}" Height="34" Content="Projekter" Foreground="White" FontSize="22" FontFamily="Rockwell"/>
            <Image x:Name="ImageProjekter" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="48" Source="Images/clipboard.png" Margin="53,59,0,0" RenderTransformOrigin="0.611,1.216"/>
