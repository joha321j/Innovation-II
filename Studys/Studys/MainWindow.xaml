            <Image x:Name="ImageOpretProjekt" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="48" Source="Images/pencil.png" Margin="53,217,0,0" RenderTransformOrigin="0.611,1.216"/>
            <Button x:Name="BtnOpretProjekt" HorizontalAlignment="Left" Margin="106,217,0,0" VerticalAlignment="Top" Width="158" Background="{x:Null}" BorderBrush="{x:Null}" Height="34" Content="Opret projekt" Foreground="White" FontSize="22" FontFamily="Rockwell"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="67" VerticalAlignment="Top" Width="314" Background="#FF2A303A">
            <Label x:Name="LabelTitle" Content="Studys" Margin="79,0" VerticalAlignment="Top" FontSize="48" Foreground="White" FontFamily="Rockwell" Height="60">
                <Label.Effect>
                    <DropShadowEffect Direction="280" ShadowDepth="2" Color="#FF101055"/>
                </Label.Effect>
            </Label>
            <Separator HorizontalAlignment="Left" Height="14" Margin="-2,59,0,-6" VerticalAlignment="Top" Width="316" Background="#FFA69E9E"/>
            <Separator HorizontalAlignment="Left" Height="14" Margin="0,464,0,-411" VerticalAlignment="Top" Width="314" Background="#FFA69E9E"/>
            <Separator HorizontalAlignment="Left" Height="14" Margin="314,59,-963,-6" VerticalAlignment="Top" Width="963" Background="#FFA69E9E"/>
        </Grid>
        <Frame Content="" HorizontalAlignment="Left" Height="680" Margin="314,67,0,0" VerticalAlignment="Top" Width="963">
            <Frame.Background>
                <ImageBrush ImageSource="Images/018 Cloudy Knoxville.png"/>
            </Frame.Background>
        </Frame>
        <Grid HorizontalAlignment="Left" Height="275" Margin="0,472,0,0" VerticalAlignment="Top" Width="314" Background="#FF20242C">
            <Image Margin="108,20,109,159" Source="Images/user (2).png" Stretch="Fill"/>
            <Button HorizontalAlignment="Left" Margin="265,10,0,0" VerticalAlignment="Top" Width="39" Background="{x:Null}" BorderBrush="{x:Null}" Height="38">
                <Image HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="26" Source="Images/settings.png"/>
            </Button>
        </Grid>

    </Grid>
</Window>
